# Supabase Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:your-password@localhost:54322/postgres

# JWT Configuration
JWT_SECRET=your-jwt-secret-here

# Email Configuration (for auth emails)
SMTP_HOST=localhost
SMTP_PORT=54325
SMTP_USER=
SMTP_PASS=
SMTP_SENDER_NAME=PromptOps
SMTP_SENDER_EMAIL=noreply@promptops.com

# Storage Configuration
STORAGE_BACKEND=file
STORAGE_FILE_SIZE_LIMIT=52428800
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=

# External API Keys (for production)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Security Configuration
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=https://localhost:3000
JWT_EXPIRY=3600
REFRESH_TOKEN_ROTATION_ENABLED=true
SECURITY_UPDATE_PASSWORD_REQUIRE_REAUTHENTICATION=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Content Moderation
CONTENT_MODERATION_ENABLED=true
AUTO_APPROVE_TRUSTED_USERS=true
MODERATION_WEBHOOK_URL=

# Analytics (optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info

# Development Settings
NODE_ENV=development
DEBUG=true
ENABLE_CONFIRMATIONS=false
